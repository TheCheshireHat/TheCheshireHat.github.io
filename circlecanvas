<html>

<h1>My Awesome Circle</h1>
<h2> Yay </h2>

<canvas id="myCanvas" width = "500px" height="500px" style="border: 5px solid red; background-color: white"> 


</canvas>

<script> 

	var llama = document.getElementById("myCanvas");
	var context = llama.getContext("2d");
	var colors =["red", "orange", "yellow", "lime", "dodgerblue", "magenta", "blue", "black,"]

	llama.onclick = function(event) {  
		var rect = llama.getBoundingClientRect();
		var posx = event.clientX - rect.left;
		var posy = event.clientY - rect.top;


	for (var i = 1; i < 100; i++) { 
		context.beginPath();


		context.arc(
			posx,
			posy,
			Math.floor(Math.random()*100),
			0, 2*Math.PI);

		

		context.stroke();
		context.lineWidth = 5;
		context.strokeStyle = colors[Math.floor(Math.random()*7)]

		/* context.fillStyle = colors[i-1]
		context.fill(); */ 
		


	}

}

</script> 
 
<html>  
